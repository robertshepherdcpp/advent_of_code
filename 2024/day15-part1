#include<iostream>
#include<vector>
#include<string>
#include<algorithm>
#include<utility>

auto move_box_left(std::pair<int, int> first_box_pos, std::vector<std::vector<char>>& grid)
{
    // so we need to find the sequence of boxes.
}

int main()
{
    std::vector<std::vector<char>> grid{};
    std::vector<char> moves{};
    std::string line{};
    bool current = true;
    while(std::getline(std::cin, line) && line != "ENDOFLINE")
    {
        if(line == "")
        {
            current = false;
        }
        else if(current == true)
        {
            std::vector<char> vec{};
            for(auto x : line)
            {
                vec.push_back(x);
            }
            grid.push_back(vec);
        }
        else if(current == false)
        {
            for(auto x : line)
            {
                moves.push_back(x);
            }
        }
    }

    // now get the position of the robot.
    bool found = false;
    std::pair<int, int> pos{};
    while(!found)
    {
        for(int i = 0; i < grid.size(); i++)
        {
            for(int j = 0; j < grid[0].size(); j++)
            {
                if(grid[i][j] == '@')
                {
                    pos = std::pair{i, j};
                    found = true;
                }
            }
        }
    }

    // after we have the input, we need to operate the moves.
    for(auto x : moves)
    {
        if(x == '^')
        {
            // we move upwards
        }
        else if(x == 'v')
        {
            // we move downwards
        }
        else if(x == '<')
        {
            // we move left
        }
        else if(x == '>')
        {
            // we move right
        }
    }
}
